<!--index.wxml-->
<view class="page">
  <view class="container">
    <view  bindtap="bindViewTap" class="userinfo">
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>
    <view class="usermotto ">
      <button bindtap="toDailyRead" class="weui-btn" type="primary" plain="true">DailyRead</button>
      <button bindtap="toTranslator" class="weui-btn" type="primary" plain="true">Translator</button>
      <button bindtap="toBoard" class="weui-btn" type="primary" plain="true">Board</button>
    </view>
  </view>
  <include src="../../utils/copyright.wxml"/>
</view>
